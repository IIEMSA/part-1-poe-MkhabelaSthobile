@model EventEaseApp.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">EventID</dt>
        <dd class="col-sm-10">@Model.EventID</dd>
        <dt class="col-sm-2">VenueID</dt>
        <dd class="col-sm-10">@Model.VenueID</dd>
        <dt class="col-sm-2">CustomerID</dt>
        <dt class="col-sm-2">BookingDate</dt>
        <dd class="col-sm-10">@Model.BookingDate</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="BookingID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

