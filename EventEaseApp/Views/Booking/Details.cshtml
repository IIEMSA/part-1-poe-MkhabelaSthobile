@model EventEaseApp.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">EventID</dt>
        <dd class="col-sm-10">@Model.EventID</dd>
        <dt class="col-sm-2">VenueID</dt>
        <dd class="col-sm-10">@Model.VenueID</dd>
        <dt class="col-sm-2">CustomerID</dt>
        <dt class="col-sm-2">BookingDate</dt>
        <dd class="col-sm-10">@Model.BookingDate</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.BookingID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

